<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>My Requests</title>
  </head>
  <body>
  <header>
    <h1>My Requests</h1>
    <form class="" action="/user-options">
      <button type="submit" name="Home"> Home </button>
    </form>
    <form action="/users/<%= session[:user_id] %>/session/destroy" method="post">
      <button type="submit">Sign Out</button>
    </form>
  </header>

    <div class="flash-notice">
          <%= flash[:notice] %>
    </div>
    <h3> Requests I've Made </h3>
       <% @requests_made.each do |request| %>
        <li> Request ID: <%=request.id %> </li>
          <br>Space ID: <%=request.space_id %>
          <br>Start Date: <%=request.start_date %>
          <br>End Date: <%=request.end_date %>
          <br>Status: <%=request.status %>
          <br>
          <br>
       <% end %>

    <h3> Requests I've Received </h3>
      <% @requests_received.each do |request| %>
      <li> Request ID: <%=request.id %> </li>
        <br>Space ID: <%=request.space_id %>
        <br>Start Date: <%=request.start_date %>
        <br>End Date: <%=request.end_date %>
        <br>Status: <%=request.status %>
          <form class="accept_request" action=<%= "/requests/#{request.id}/accept" %> method="post">
            <button type="submit" name="accept">Accept</button>
          </form>
          <form class="decline_request" action=<%= "/requests/#{request.id}/decline" %> method="post">
            <button type="submit" name="accept">Decline</button>
          </form>
        <br>
     <% end %>

  </body>
</html>
