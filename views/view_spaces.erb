    <div class="description"> <%= "#{space.description}" %> </div> <br>
    <div class="ppn"> <%= "Price per night only: Â£#{space.ppn / 100}" %> </div>
    <a href="spaces/<%="#{space.id}"%>">See more...</a>
  </div>
 <% end %>
 </body>
</html>
